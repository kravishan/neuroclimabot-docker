# This is a template file. Copy to secrets.yaml and fill in actual values.
# DO NOT commit secrets.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: neuroclima-secrets
  namespace: uoulu
type: Opaque
stringData:
  # MinIO credentials
  MINIO_ACCESS_KEY: "your_minio_access_key_here"
  MINIO_SECRET_KEY: "your_minio_secret_key_here"

  # Milvus credentials
  MILVUS_USER: "root"
  MILVUS_PASSWORD: "Milvus"

  # Redis password
  REDIS_PASSWORD: "your_redis_password_here"

  # OpenAI API key (if using paid model provider)
  OPENAI_API_KEY: "your_openai_api_key_here"

  # Server secret key for JWT and session management
  # Generate a random string: openssl rand -hex 32
  SECRET_KEY: "change-this-to-a-random-secret-key-in-production"

  # Admin credentials
  ADMIN_USERNAME: "your_admin_username_here"
  ADMIN_PASSWORD: "your_admin_password_here"

  # Email credentials - Maileroo
  MAILEROO_API_KEY: "your_maileroo_api_key_here"
  MAILEROO_FROM_EMAIL: "your_maileroo_from_email_here"

  # Email credentials - SMTP (fallback)
  SMTP_USERNAME: ""
  SMTP_PASSWORD: ""

  # Langfuse credentials (observability/tracing)
  LANGFUSE_SECRET_KEY: "your_langfuse_secret_key_here"
  LANGFUSE_PUBLIC_KEY: "your_langfuse_public_key_here"
  LANGFUSE_HOST: "your_langfuse_server_url_here"
